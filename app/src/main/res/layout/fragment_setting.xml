<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contact_item_dividing_line"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雷凯"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="山西百斯奥格科技有限公司"
                        android:textSize="12sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/tv_user_name"
                        />
                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android 软件开发工程师"
                        android:textSize="12sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_below="@+id/tv_company"
                        />
                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1983265225@qq.com"
                        android:textSize="12sp"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/tv_department"
                        />
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="华润大厦T3 31层"
                        android:textSize="12sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_below="@+id/tv_mobile"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_default_portrait"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/btn_modify_username"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="用户名修改"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"
                        />

                    <ImageView

                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/contact_item_dividing_line"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:id="@+id/btn_modify_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="密码修改"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/enter"/>
                </RelativeLayout>

                <View style="@style/view_line_height_gray_1" />
                <RelativeLayout
                    android:id="@+id/btn_modify_handle_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="手势密码修改"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/enter"/>
                </RelativeLayout>

                <View style="@style/view_line_height_gray_1" />

                <RelativeLayout
                    android:id="@+id/btn_msg_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="新消息提醒"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"/>

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/enter"/>
                </RelativeLayout>

                <View style="@style/view_line_height_gray_1" />

                <RelativeLayout
                    android:id="@+id/btn_modify_serverip"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="修改服务器地址"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"/>

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/enter"/>

                </RelativeLayout>

                <View style="@style/view_line_height_gray_1" />

                <RelativeLayout
                    android:id="@+id/btn_modify_courtoa_list"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:visibility="gone"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="修改启用手机OA的法院列表"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"/>

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/enter"/>

                </RelativeLayout>




                <View style="@style/view_line_height_gray_1" />
                <RelativeLayout
                    android:id="@+id/btn_switch_account"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:visibility="visible"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="切换账号"
                        android:textColor="#1e1e1e"
                        android:textSize="@dimen/text_size_mid"/>

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/enter"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/contact_item_dividing_line"/>

            </LinearLayout>
            <View style="@style/view_line_height_gray_1" />

            <RelativeLayout
                android:id="@+id/btn_delete_cache"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="清理缓存"
                    android:textColor="#1e1e1e"
                    android:textSize="@dimen/text_size_mid" />



                <ImageView
                    android:id="@+id/iv_delete_cache"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/enter" />
                <TextView
                    android:id="@+id/tv_get_data_rubbish"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/iv_delete_cache"
                    android:text="0M" />
            </RelativeLayout>


            <View style="@style/view_line_height_gray_1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/btn_style"
                    android:text="退出账户"
                    android:background="@drawable/btn_bg"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>